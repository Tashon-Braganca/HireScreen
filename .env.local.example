# ===========================================
# HIRESCREEN ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# SUPABASE
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# OPENAI
# ===========================================
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# GOOGLE OAUTH (Optional)
# ===========================================
# Get these from: https://console.cloud.google.com/apis/credentials
# Leave blank to disable Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# PADDLE
# ===========================================
# Get these from: https://vendors.paddle.com/authentication
# Client Token: Paddle Dashboard > Developer Tools > Client-side token
# API Key: Paddle Dashboard > Developer Tools > Authentication
# Price ID: Paddle Dashboard > Catalog > Prices
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=your-client-token
PADDLE_API_KEY=your-api-key
PADDLE_PRO_PRICE_ID=your-pro-price-id
NEXT_PUBLIC_PADDLE_PRO_PRICE_ID=your-pro-price-id
PADDLE_WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# APP CONFIG
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# OPTIONAL: RATE LIMITING
# ===========================================
# Queries per month for free users
FREE_TIER_QUERY_LIMIT=20
# Queries per month for pro users
PRO_TIER_QUERY_LIMIT=1000
# Max resumes per job for free users
FREE_TIER_RESUME_LIMIT=10
# Max resumes per job for pro users
PRO_TIER_RESUME_LIMIT=100
